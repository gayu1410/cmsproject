<%- include ("../layouts/adminheader"); -%>

<h2 class="page-title">Add Product</h2>
<a href="/admin/products/" class="btn btn-primary">Back to all products</a>
<br><br>

 enctype for images as from this upload file comes into action 
<form class="" action="/admin/products/edit-product" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="">Title</label>
    <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
  </div>

  <div class="form-group">
    <label for="">Description</label>
    <textarea name="desc" class="form-control" id="ta" rows="5" cols="20" placeholder="Description"><%= desc %></textarea>
  </div>

  <div class="form-group">
    <label for="">Category</label>
    <select class="form-control" name="category"
      <% categories.forEach(function(cat){ %>  
        <option value="<%= cat.slug %>"> <%= if(cat.slug == category){ %></option>
          selected = "selected";
          <% } %>
          ><%= cat.title %></option>
      <% }); %>
    </select>
  </div>

  <div class="form-group">
    <label for="">Price</label>
    <input type="number" class="form-control" name="price" value="<%= price %>" placeholder="Price">
  </div>

  <div class="form-group">
    <label for="">Current Image</label>
    <p>
      <% if(image == ""){ %>
        <img id="noimage" src="/images/noimage.png" >
      <% }else{ %>
        <img id="noimage" src="/product_images/<%= id %>/<%= image %>" >
      <% } %>
    </p>  
  </div>

  <input type="hidden" name="pimage"  value="<% img %>">

  <div class="form-group">
    <label for="">Upload Image</label>
    <input type="file" name="image"  class="form-control" id="img">
    <img src="#" id="imgPreview" alt="">
  </div>



<button class="btn btn-primary" type="submit" name="button">Submit</button>

</form>


<!-- this is done to add image -->
<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#img").change(function() {
        readURL(this);
    });

</script>

